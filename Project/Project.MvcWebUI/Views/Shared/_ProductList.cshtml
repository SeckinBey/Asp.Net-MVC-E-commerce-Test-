@using Project.MvcWebUI.Models;
@model IEnumerable<ProductModel>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="/Upload/@product.Image" class="card-img-top" alt="@product.Name">
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="/Home/Details/@product.Id">@product.Name</a>
                    </h4>
                    <p class="card-text pt-2 description">@product.Description</p>
                    <p class="card-text">
                        <small class="text-muted product-price">
                            <i class="fas fa-lira-sign"></i>
                            @product.Price
                        </small>
                        <a href="/Home/Details/@product.Id" class="btn btn-default btn-sm float-right">
                            <i class="fas fa-angle-double-right"></i>
                            View Product
                        </a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>

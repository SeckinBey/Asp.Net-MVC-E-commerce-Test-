@using Project.MvcWebUI.Entity
@model Project.MvcWebUI.Models.OrderDetailsModel
@{
    ViewBag.Title = "Details";
}

<div class="container pb-5 mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Order detail information</h2>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">OrderState</dt>
                <dd class="col-sm-9">
                    @if (Model.OrderState == EnumOrderState.Waiting)
                    {
                        <span class="badge-warning">@Model.OrderState</span>
                    }
                    else if (Model.OrderState == EnumOrderState.Completed)
                    {
                        <span class="badge-success">@Model.OrderState</span>
                    }
                </dd>

                <dt class="col-sm-3">Order Id</dt>
                <dd class="col-sm-9">@Model.OrderId</dd>

                <dt class="col-sm-3">Order Number</dt>
                <dd class="col-sm-9">@Model.OrderNumber</dd>

                <dt class="col-sm-3">Total</dt>
                <dd class="col-sm-9">
                    <i class="fas fa-lira-sign"></i>
                    @Model.Total
                </dd>

                <dt class="col-sm-3">OrderDate</dt>
                <dd class="col-sm-9">@Model.OrderDate</dd>



                <dt class="col-sm-3">Nesting</dt>
                <dd class="col-sm-9">
                    @Model.AddressTitle
                    <hr />
                    @Model.Address
                    <br />
                    @Model.City - @Model.District - @Model.Neighborhood
                    <br />
                    @Model.PostCode
                </dd>

                <dt class="col-sm-3">Products</dt>
                <dd class="col-sm-9">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th style="width: 45%;">Product Name</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th style="width: 20%;"></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.OrderLines)
                            {
                                <tr>
                                    <td>
                                        <img src="/Upload/@item.Image" width="70" />
                                    </td>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>
                                        <i class="fas fa-lira-sign"></i>
                                        @item.Price
                                    </td>
                                    <td>
                                        <a href="/Home/Details/@item.ProductId" class="btn btn-primary btn-sm" target="_blank">
                                            <i class="fas fa-info-circle"></i>
                                            Product Details
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </dd>
            </dl>

        </div>
    </div>
</div>


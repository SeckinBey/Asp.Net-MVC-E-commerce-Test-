@model IEnumerable<Project.MvcWebUI.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container pb-5 mt-5">

    <h2>Product List</h2>
    <hr />

    <p>
        @Html.ActionLink("Create New Product", "Create", null, new {@class="btn btn-primary"})
    </p>
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHome)
            </th>
            <th style="width: 135px;"></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img src="~/Upload/@item.Image"/ width="70">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (item.IsApproved)
                {
                <label class="badge badge-success">
                    <i class="far fa-check-circle"></i>
                    True
                </label>
                }
                else
                {
                <label class="badge badge-danger">
                    <i class="far fa-times-circle"></i>
                    False
                </label>   
                }
            </td>
            <td>
                @if (item.IsHome)
                {
                    <label class="badge badge-success">
                        <i class="far fa-check-circle"></i>
                        True
                    </label>
                }
                else
                {
                    <label class="badge badge-danger">
                        <i class="far fa-times-circle"></i>
                        False
                    </label>   
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
        }

    </table>

</div>

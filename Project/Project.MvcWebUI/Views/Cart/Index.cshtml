@model Project.MvcWebUI.Models.Cart
@{
    ViewBag.Title = "Index";
}



<div class="container pb-5 mt-5">
    <div class="row">
        <div class="col-md-12">

            <h2>Shopping Cart</h2>
            <hr />

            @if (Model.GetCartLines.Any())
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Quantity</th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Sub Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.GetCartLines)
                        {
                            <tr>
                                <td><img src="~/Upload/@item.Product.Image" width="50" /></td>
                                <td>@item.Quantity</td>
                                <td>@item.Product.Name</td>
                                <td>@item.Product.Price</td>
                                <td>@((item.Product.Price * item.Quantity).ToString("C"))</td>
                                <td>
                                    @using (Html.BeginForm("RemoveFromCart", "Cart"))
                                    {
                                        @Html.Hidden("Id", item.Product.Id)
                                        <button type="submit" class="btn btn-danger">
                                            <i class="far fa-trash-alt"></i>
                                            Delete
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="4"></td>
                            <td>@Model.TotalPrice().ToString("C")</td>
                        </tr>
                    </tfoot>
                </table>

                <div class="text-center">
                    <a href="/Home/List" class="btn btn-primary">
                        <i class="fas fa-angle-double-left"></i>
                        Continue shopping
                    </a>
                    <a href="/Cart/Checkout" class="btn btn-success">
                        <i class="fas fa-check"></i>
                        Complete shopping
                    </a>
                </div>


            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-circle"></i>
                    There are no products in your shopping cart.
                </div>
            }



        </div>
    </div>
</div>

